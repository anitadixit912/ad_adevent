<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:ux="sap.uxap"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

        <ux:ObjectPageSubSection>
            <ux:blocks>

                <f:SimpleForm
                    maxContainerCols="2"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanL="12"
                    labelSpanM="12"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="1"
                    columnsM="1">
                    <f:content>
                        <Label text="Building"/>
                        <Text text="{notifications>WRKBUILDING}"/>
                        <Label text="Floor"/>
                        <Text text="{notifications>WRKFLOOR}"/>
                        <Label text="Workstation Number"/>
                        <Text text="{notifications>WRKSTATION}"/>
                        <Label text="Desk Keys Handover"/>
                        <Text text="{notifications>WRKDESKKEYS}"/>
                    </f:content>
                </f:SimpleForm>
        </ux:blocks>
        </ux:ObjectPageSubSection>
 
</core:FragmentDefinition>